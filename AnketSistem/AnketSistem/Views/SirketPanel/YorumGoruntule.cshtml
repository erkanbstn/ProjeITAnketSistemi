@using EntityLayer.Concrete
@model List<TYorum>
@{
    ViewBag.Title = "YorumGoruntule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yorum Goruntule</h2>

<table class="table table-hover">
    <tbody>
        <tr>
            <th>
                Yorum
            </th>
            <th>
                Personel
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                @if (item.AnketID == ViewBag.anket)
                {
                    <td>
                        @item.YorumAd
                    </td>
                    if (item.Anket.AnketTip == "Kullanıcı Adı")
                    {
                        <td>
                            @item.Personel.PersonelAd
                        </td>
                    }
                    else
                    {
                        <td>
                            Anonim
                        </td>
                    }
                }
            </tr>
        }
    </tbody>
</table>

