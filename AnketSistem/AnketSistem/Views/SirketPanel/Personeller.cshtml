
@{
    ViewBag.Title = "Personeller";
}

<table class="table table-hover">
    <tbody>
        <tr>
            <th>
                Personel
            </th>
            <th>
                Düzenle
            </th>
            <th>
                Sil
            </th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>
            @item.PersonelAd
        </td>
        <td>
            <a class="btn btn-success" href="~/SirketPanel/PersonelDuzenle/@item.PersonelID">Düzenle</a>
        </td>
        <td>
            <a class="btn btn-danger" href="~/SirketPanel/PersonelSil/@item.PersonelID">Sil</a>
        </td>
    </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" href="~/SirketPanel/PersonelEkle">Yeni Personel Ekle</a>

