@model List<EntityLayer.Concrete.TCevap>
@{
    ViewBag.Title = "SonucGoruntule";
}
<h1>Anket : @ViewBag.anketad</h1>
<br />
<table class="table table-hover">
    <tr>
        <th>
            Personel Şirket
        </th>
        <th>
            Cevaplayan Personel
        </th>
        <th>
            Cevaplanan Soru
        </th>
        <th>
            Cevap
        </th>
    </tr>
    @foreach (var item in Model)
    {
        if (item.Soru.Anket.AnketID == ViewBag.anket)
        {
            <tr>
                <td>
                    @item.Soru.Anket.Sirket.SirketAd
                </td>
                <td>
                    @item.Personel.PersonelAd
                </td>
                <td>
                    @item.Soru.SoruAd
                </td>
                <td>
                    @item.CevapAd
                </td>
            </tr>
        }
    }
</table>
<a href="~/AdminPanel/YorumGoruntule/@ViewBag.anket" class="btn btn-primary">Yapılan Yorumları Görüntüle</a>

