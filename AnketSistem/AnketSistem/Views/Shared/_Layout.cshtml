    <script src="~/FlatLab/js/owl.carousel.js"></script>
    <script src="~/FlatLab/js/jquery.customSelect.min.js"></script>
    <script src="~/FlatLab/js/respond.min.js"></script>
    <script src="~/FlatLab/js/slidebars.min.js"></script>
    <script src="~/FlatLab/js/common-scripts.js"></script>
    <script src="~/FlatLab/js/sparkline-chart.js"></script>
    <script src="~/FlatLab/js/easy-pie-chart.js"></script>
    <script src="~/FlatLab/js/count.js"></script>
    <script>
        //owl carousel
        $(document).ready(function () {
            $("#owl-demo").owlCarousel({
                navigation: true,
                slideSpeed: 300,
                paginationSpeed: 400,
                singleItem: true,
                autoPlay: true

            });
        });
        $(function () {
            $('select.styled').customSelect();
        });
        $(window).on("resize", function () {
            var owl = $("#owl-demo").data("owlCarousel");
            owl.reinit();
        });</script>
</body>
</html>
