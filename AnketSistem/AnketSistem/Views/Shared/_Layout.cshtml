<body>
    <section id="container">
        <header class="header white-bg">
            <a href="index.html" class="logo">Flat<span>lab</span></a>
        </header>
        <aside>
            <div id="sidebar" class="nav-collapse ">
                @if (Session["Role"].ToString() == "Admin")
                {
            @Html.Partial("~/Views/Shared/Partials/AdminLogin.cshtml")}
        else if (Session["Role"].ToString() == "Mudur")
        {
            @Html.Partial("~/Views/Shared/Partials/SirketLogin.cshtml")}
        else
        {
            @Html.Partial("~/Views/Shared/Partials/PersonelLogin.cshtml")}


                }

            </div>
        </aside>
        <section id="main-content">
            <section class="wrapper">
                @RenderBody()
            </section>
        </section>
        <footer class="site-footer">
            <div class="text-center">
                2013 &copy; FlatLab by VectorLab.
                <a href="index.html#" class="go-top">
                    <i class="fa fa-angle-up"></i>
                </a>
            </div>
        </footer>
    </section>
    <script src="~/FlatLab/js/jquery.js"></script>
    <script src="~/FlatLab/js/bootstrap.min.js"></script>
    <script class="include" type="text/javascript" src="~/FlatLab/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/FlatLab/js/jquery.scrollTo.min.js"></script>
    <script src="~/FlatLab/js/jquery.nicescroll.js" type="text/javascript"></script>
